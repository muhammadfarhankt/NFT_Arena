  <a href="/" title="Home Page">
    <i class="fas fa-home"></i>
    <span>Home</span>
  </a>
  
  <button class="cate-btn" title="Category List">
    <i class="fas fa-list"></i>
    <span>Categories & Authors</span>
  </button>

