<%- include('../partials/header') %>
<!-- navbar -->
<%- include('../partials/categories-navbar') %>
    <!-- Top Carousel -->
    <div id="topCarousel" class="carousel slide mb-3 mt-0 pt-0" data-ride="carousel">
      <ol class="carousel-indicators">
        
        <li data-target="#topCarousel" data-slide-to="0" class="active"></li>
        
        <% for(let i=1;i<bannerData.length;i++) { %>
          <li data-target="#topCarousel" data-slide-to="<%= i+1 %>"></li>
          <% } %>
        
      </ol>
      <div class="carousel-inner">

        <div class="carousel-item">
          <a href="<%= bannerData[0].link %>">
            <img class="d-block w-100" src="/imagess/<%=bannerData[0].image%>" alt="0 slide" />
            </a>
          </div>

        <% for (let j=1;j<bannerData.length;j++) { %>
        <div class="carousel-item active">
          <a href="<%= bannerData[j].link %>">
          <img class="d-block w-100" src="/imagess/<%=bannerData[j].image%>" alt="<%= j+1 %> slide" />
          </a>
        </div>

        <% } %>
      </div>

      <a class="carousel-control-prev" href="#topCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>

      <a class="carousel-control-next" href="#topCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

   
    <!-- Store's categories section -->
<div class="container">
  <h3 class="text-center mb-3 mt-4">NFT Store's Categories</h3>
  
  <div class="row text-center m-auto">
    
    <div class="col-lg-3 col-md-3 col-sm-12 text-center ml-2">
      <a class="title-link" href="/category?id=6406f3b6a434c65aa50fd43b">
        <img src="http://cdn.shopify.com/s/files/1/0002/9091/4356/articles/MUSIC_NFT_1_1024x1024.jpg" alt="category" class="circle-img" />
        <h4 class="mb-3 mt-3">Music NFTs</h4>
      </a>
    </div>
    
    <div class="col-lg-3 col-md-3 col-sm-12 text-center ml-2">
      <a class="title-link" href="/category?id=6406f3e1a434c65aa50fd441">
        <img src="https://www.creativityculturecapital.org/wp-content/uploads/2021/09/22_Diego_Balan_Web.png" alt="category" class="circle-img" />
        <h4 class="mb-3 mt-3">Art NFTs</h4>
      </a>
    </div>
    
    <div class="col-lg-3 col-md-3 col-sm-12 text-center ml-2">
      <a class="title-link" href="/category?id=6405dc172233cf2a535919b6">
        <img src="https://meta-legends.com/img/celestial.ee45254d.png" alt="category" class="circle-img" />
        <h4 class="mb-3 mt-3">Meta Legends</h4>
      </a>
    </div>
    
    <div class="col-lg-1 col-md-1 col-sm-12 text-center mx-auto">
      <a href="/shop">
        <i class="fa fa-chevron-circle-right" aria-hidden="true"></i>
      </a>
    </div>
  </div>
  
</div>

<hr class="gradient-style" />

<!-- Latest products slider -->
<div class="container mb-4 mt-4">
  <!--Carousel Wrapper-->
  <div
    id="products-carousel"
    class="carousel slide carousel-multi-item"
    data-ride="carousel"
  >
    <!--Controls-->
    <div class="controls-top mb-2">
      <div class="row">
        <div class="col-8">
          <h3>Latest Products</h3>
        </div>
        <div class="col-4">
          <div class="controls float-right hidden-xs">
            <a
              class="left fa fa-chevron-left btn btn"
              href="#products-carousel"
              data-slide="prev"
            ></a
            ><a
              class="right fa fa-chevron-right btn"
              href="#products-carousel"
              data-slide="next"
            ></a>
          </div>
        </div>
      </div>
    </div>
    <!--/.Controls-->

    <!-- Slides-->
    <div class="carousel-inner" role="listbox">
      <!--First slide-->
      <div class="carousel-item active">
        <div class="row">
          
          <% for(let j=0,i=0;i<3;i++) { %>

          <div class="col-md-4 product-index-box">
            <div class="single-product d-flex flex-column h-100">
              <a
                class="title-link"
                href="/product?id=<%= productData[i]._id %>"
              >
                <img
                  src="/imagess/<%=productData[i].image%>"
                  alt="NFT"
                  class="img-fluid"
              /></a>
              <div class="product-info">
                <a
                  class="title-link"
                  href="/product?id=<%= productData[i]._id %>"
                >
                  <h6 class="mt-2 mb-2"><%= productData[j].name %></h6></a
                >
                <div class="price">Price: $ <%= productData[j].price %></div>
              </div>
              
              <a
                href="/add-to-cart?id=<%= productData[i]._id %>"
                class="btn btn-block btn-secondary button-style mt-auto mb-2"
              >
                Add to Shopping Cart
              </a>
              
            </div>
          </div>

          <% } %>
          
        </div>
      </div>
      <!--/.First slide-->

      <!--Second slide-->
      <div class="carousel-item">
        <div class="row">
          
          <% for(let j=3;j<6;j++) { %>

            <div class="col-md-4 product-index-box">
              <div class="single-product d-flex flex-column h-100">
                <a
                  class="title-link"
                  href="/product?id=<%= productData[j]._id %>"
                >
                  <img
                    src="/imagess/<%=productData[j].image%>"
                    alt="NFT"
                    class="img-fluid"
                /></a>
                <div class="product-info">
                  <a
                    class="title-link"
                    href="/product?id=<%= productData[j]._id %>"
                  >
                    <h6 class="mt-2 mb-2"><%= productData[j].name %></h6></a
                  >
                  <div class="price">Price : $ <%= productData[j].price %></div>
                </div>
                
                <a
                  href="/add-to-cart?id=<%= productData[j]._id %>"
                  class="btn btn-block btn-secondary button-style mt-auto mb-2"
                >
                  Add to Shopping Cart
                </a>
                
              </div>
            </div>
  
            <% } %>
          
          
        </div>
      </div>
      <!--/.Second slide -->

      
    </div>
    <!--/.Slides-->
  </div>
  <!--/.Carousel Wrapper-->
</div>

 



