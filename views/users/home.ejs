<%- include('../partials/__user-head.ejs') %>
  <link rel="stylesheet" href="/static/css/index.css">
  <title>NFT Arena</title>
  </head>


  <body>

    <%- include('../partials/__user-nav.ejs') %>
      <%- include('../partials/__user-side-cat.ejs') %>
        <%- include('../partials/__user-cart.ejs') %>
          <%- include('../partials/__user-sidenav.ejs') %>
            <%- include('../partials/__user-mobile.ejs') %>


              <!-- Hero -->
              <section class="home-index-slider slider-arrow slider-dots">

                <% if (bannerData.length> 0) { %>

                  <% bannerData.forEach((banner,index)=> { %>

                    <!-- left -->
                    <div class="banner-part banner-<%= index %>">
                      <div class="container">
                        <div class="row align-items-center">

                          <% if (banner.textPosition==='right' ) { %>

                            <div class="col-md-6 col-lg-6">
                              <div class="banner-img"><img src="/imagess/<%= banner.image %>" alt="index"></div>
                            </div>

                            <% } %>

                              <div class="col-md-6 col-lg-6">
                                <div class="banner-content">
                                  <h1>
                                    <%= banner.textHeader %>
                                  </h1>
                                  <p>
                                    <%= banner.textContent %>
                                  </p>
                                  <div class="banner-btn"><a class="btn btn-inline" href="/shop"><i
                                        class="fas fa-shopping-basket"></i><span>shop now</span></a><a
                                      class="btn btn-outline" href="/shop"><i
                                        class="icofont-sale-discount"></i><span>get offer</span></a></div>
                                </div>
                              </div>

                              <% if (banner.textPosition==='left' ) { %>

                                <div class="col-md-6 col-lg-6">
                                  <div class="banner-img"><img src="/imagess/<%= banner.image %>" alt="index"></div>
                                </div>

                                <% } %>


                        </div>
                      </div>
                    </div>

                    <% }) %>
                      <% } %>

                       
              </section>

              <!------------ Category Slider -------------->
              <section class="section suggest-part">
                <div class="container">
                  <div class="col">
                    <div class="section-heading">
                      <h2>Categories</h2>
                    </div>
                  </div>
                  <ul class="suggest-slider slider-arrow">
                    <% let i=0 %>
                      <!-- Iterate Categories -->
                      <% categoryData.forEach(cat=> { %>

                        <li><a class="suggest-card" href="/category?id=<%= cat._id %>">
                            <img
                              src="/static/images/category/background.avif"
                              alt="suggest">
                            <h5>
                              <%= cat.name %><span>

                                </span>
                            </h5>
                          </a></li>

                        <% i++ }) %>

                  </ul>
                </div>
              </section>



              <!----------------- Newly Added products ----------------->
              <section class="section newitem-part">
                <div class="container">
                  <div class="row">
                    <div class="col">
                      <div class="section-heading">
                        <h2>collected Latest NFTs</h2>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <ul class="new-slider slider-arrow">

                        <% newlyAddedProducts.forEach(prod=> { %>


                          <li>
                            <div class="product-card ">
                              <div class="product-media">


                                <div class="product-label">
                                  <label class="label-text new">new</label>
                                </div>
                                <a href="/add-to-wishlist?id=<%= prod._id%>">
                                  <button class="product-wish">
                                    <i class="fas fa-heart"></i>
                                  </button>
                                </a>
                                <a class="product-image" href="/product?id=<%=prod._id%>">
                                  <img src="/imagess/<%= prod.image  %>" alt="product">
                                </a>
                                <div class="product-widget">
                                  <a title="Product View" href="/product?id=<%=prod._id%>" class="fas fa-eye"></a>
                                </div>
                              </div>
                              <div class="product-content">


                                <h6 class="product-name"><a href="/product?id=<%= prod._id %>">
                                    <%= prod.name %>
                                  </a></h6>
                                <h6 class="product-price"><span>$ <%= prod.price %></span></h6>


                                <a class="product-addNew" title="Add to Cart" href="/add-to-cart?id=<%= prod._id %>">
                                  <i class="fas fa-shopping-basket" href=""></i><span>Add</span>
                                </a>

                              </div>
                            </div>
                          </li>

                          <% }) %>

                      </ul>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <div class="section-btn-25"><a href="/shop" class="btn btn-outline"><i
                            class="fas fa-eye"></i><span>show more</span></a></div>
                    </div>
                  </div>
                </div>
              </section>


              <!---------- Promotion Ad Banner ----------------->
              <div class="section promo-part">
                <div class="container">
                  <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6 px-xl-3">
                      <div class="promo-img"><a href="/shop"><img src="/static/images/promo/1.jpg"
                            alt="promo"></a></div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6 px-xl-3">
                      <div class="promo-img"><a href="/shop"><img src="/static/images/promo/2.jpg"
                            alt="promo"></a></div>
                    </div>
                  </div>
                </div>
              </div>

              <!------------ Author Slider -------------->
              <section class="section suggest-part">
                <div class="container">
                  <div class="col">
                    <div class="section-heading">
                      <h2>Authors</h2>
                    </div>
                  </div>
                  <ul class="suggest-slider slider-arrow">
                    <% let j=0 %>
                      <!-- Iterate Authors -->
                      <% authorData.forEach(cat=> { %>

                        <li><a class="suggest-card" href="/author-products?id=<%= cat._id %>">
                            <img src="/static/images/category/background.avif" alt="suggest">
                            <h5>
                              <%= cat.name %><span>

                                </span>
                            </h5>
                          </a></li>

                        <% j++ }) %>

                  </ul>
                </div>
              </section>


              <!------------------ TOP 5 Products  ------------------->

              <section class="section niche-part">
                <div class="container">
                  <div class="row">
                    <div class="col-lg-12">
                      <div class="section-heading">
                        <h2>Browse by Top 5</h2>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-12">
                      <ul class="nav nav-tabs">
                        <li><a href="#top-wish1" class="tab-link active" data-bs-toggle="tab"><i
                              class="icofont-price"></i><span>
                                top Wished NFTs</span></a></li>
                        <li><a href="#top-view1" class="tab-link" data-bs-toggle="tab"><i
                              class="icofont-star"></i><span>
                                top Viewed NFTs</span></a></li>
                      </ul>
                    </div>
                  </div>

                  <!------------------ First tab: Top 10 wish listed products (10 cards) ----------------->
                  <div class="tab-pane fade show active" id="top-wish1">
                    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">

                          <% wishedProducts.forEach(prod=> { %>
                            <div class="col">
                              <div class="product-card ">
                                <div class="product-media">
  
  
                                  <div class="product-label">
                              <label class="label-text order">Trending</label>
                                  </div>
                                  <a href="/add-to-wishlist?id=<%= prod._id%>">
                                    <button class="product-wish">
                                      <i class="fas fa-heart"></i>
                                    </button>
                                  </a>
                                  <a class="product-image" href="/product?id=<%=prod._id%>">
                                    <img src="/imagess/<%= prod.image  %>" alt="product">
                                  </a>
                                  <div class="product-widget">
                                    <a title="Product View" href="/product?id=<%=prod._id%>" class="fas fa-eye"></a>
                                  </div>
                                </div>
                                <div class="product-content">
  
                                  <h6 class="product-name"><a href="/product?id=<%= prod._id %>">
                                      <%= prod.name %>
                                    </a></h6>
                                  <h6 class="product-price"><span>$ <%= prod.price %></span></h6>
  
  
                                  <a class="product-addNew" title="Add to Cart" href="/add-to-cart?id=<%= prod._id %>">
                                    <i class="fas fa-shopping-basket" href=""></i><span>Add</span>
                                  </a>
  
                                </div>
                              </div>
                            </div>
  
                            <% }) %>

                    </div>
                  </div>

                  <!------------------ Second tab: Top 10 most viewed products (10 cards) ----------------->

                  <div class="tab-pane fade" id="top-view1">
                    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">

                      <% viewedProducts.forEach(prod=> { %>
                        <div class="col">
                          <div class="product-card ">
                            <div class="product-media">


                              <div class="product-label">
                                <label class="label-text rate">Popular</label>
                              </div>
                              <a href="/add-to-wishlist?id=<%= prod._id%>">
                                <button class="product-wish">
                                  <i class="fas fa-heart"></i>
                                </button>
                              </a>
                              <a class="product-image" href="/product?id=<%=prod._id%>">
                                <img src="/imagess/<%= prod.image  %>" alt="product">
                              </a>
                              <div class="product-widget">
                                <a title="Product View" href="/product?id=<%=prod._id%>" class="fas fa-eye"></a>
                              </div>
                            </div>
                            <div class="product-content">


                              <h6 class="product-name"><a href="/product?id=<%= prod._id %>">
                                  <%= prod.name %>
                                </a></h6>
                              <h6 class="product-price"><span>$ <%= prod.price %></span></h6>


                              <a class="product-addNew" title="Add to Cart" href="/add-to-cart?id=<%= prod._id %>">
                                <i class="fas fa-shopping-basket" href=""></i><span>Add</span>
                              </a>

                            </div>
                          </div>
                        </div>

                        <% }) %>



                    </div>
                  </div>

                 
                <div class="row">
                  <div class="col-lg-12">
                    <div class="section-btn-25"><a href="/shop" class="btn btn-outline"><i
                          class="fas fa-eye"></i><span>show
                          more</span></a></div>
                  </div>
                </div>
                </div>
              </section>

              <!--------------------MODALS-------------------------------------------------->

              <!----------------- Recent sold Product view modal ----------------->


              <!----------------- Newly Added Product view modal ----------------->


              <!----------------- Most Sold Product view modal ----------------->


              <!----------------- Most Rated Product view modal ----------------->



              <!----------------- Most Discounted Product view modal ----------------->



              <!-------------------- End of contents ------------------->

