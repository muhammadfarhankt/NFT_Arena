<%- include('../partials/header') %>
    <!-- navbar -->
    <%- include('../partials/categories-navbar') %>

        <div class="container cart">
            <h2 style="text-align: center; padding-top: 5px; padding-bottom: 5px;">Wishlist</h2>
            <div class="row">
                <div class="col-md-11 col-sm-12 m-auto table-responsive">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th style="text-align: left;">Details</th>
                                <th>Price</th>
                                
                                <th>&nbsp;</th>
                                <th style="text-align: left;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% wishListData.item.forEach(eachItem=>{%>
                                <tr class="my-auto">
                                    <td>
                                        <a href="/product?id=<%=eachItem.productId._id%>
                                            ">
                                            <img src="/imagess/<%= eachItem.productId.image %>"
                                                class="img-small image-fluid" alt="image thumbnail" width="65px"
                                                height="65px" />
                                        </a>
                                    </td>
                                    <td>
                                        <div class="float-left mb-3">
                                            <a class="title-link"
                                                href="/product?id=<%=eachItem.productId._id%>">
                                                <h6 class="text-left"><%= eachItem.productId.name %></h6>
                                                <p class="text-left">Product No: <%= eachItem.productId._id %></p>
                                        </div>

                                        </a>
                                    </td>
                                    
                                    <td>$ <%= eachItem.productId.price %></td>
                                    <td>
                                        <a href="/remove-from-wishlist?id=<%= eachItem.productId._id %>"
                                            class="btn btn-danger btn-sm button-style-sucess">Remove</a>
                                    </td>
                                    <td>
                                        <a href="/move-to-cart?id=<%= eachItem.productId._id %>"
                                            class="btn btn-danger btn-sm button-style-danger">Move to Cart</a>
                                    </td>
                                </tr>

                              <%}) %> 


                        </tbody>
                    </table> 
                </div>
            </div>
            <hr>
            <div class="row mt-4 mr-auto">
                <div class="col-md-11 col-sm-12 m-auto">
                    <h3 style="text-align: right;">Total : $
                        <% let total=0 %>
                        <% wishListData.item.forEach(eachItem=>{%>
                            <% total += eachItem.productId.price %>
                        <%}) %> 
                        <%= total %>


                    </h3>
                </div>
            </div>
            <div class="row mt-2 mr-auto">
                <div class="col-md-11 col-sm-12 m-auto">
                    <a href="/checkout" class="btn btn-dark button-style" style="float: right;">Checkout</a>
                    <a href="/empty-wishlist" class="btn btn-dark button-style-danger" style="float: left;">Remove All</a>
                </div>
            </div>

        </div>

        <%- include('../partials/footer') %>