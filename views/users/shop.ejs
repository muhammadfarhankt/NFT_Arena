<%- include('../partials/header') %>
  <!-- navbar -->
  <%- include('../partials/categories-navbar') %>


    <div class="container-fluid">
      <!-- Breadcrumbs -->
      <div class="row mt-2">
        <div class="col-md-12 m-auto">

        </div>
      </div>


      <div class="text-center hero-container">
        <img class="d-block w-100 hero-image" src="/images/nftSlide2.png" />
        <div class="hero-text">
          <h1 style="color: white;">All NFTs</h1>
        </div>
      </div>

      <hr class="gradient-style" />
      <div class="row pl-4 pr-4">

        <% for(let content of pageProducts) { %>
          <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 product-index-box">
            <div class="single-product d-flex flex-column h-100">
              <a class="title-link" href="/product?id=<%= content._id %>">
                <img src="/imagess/<%= content.image %>" alt="Bag" class="img-fluid" /></a>
              <div class="product-info">
                <a class="title-link" href="/product?id=<%= content._id %>">
                  <h4 class="mt-2 mb-2">
                    <%= content.name %>
                      </h6>
                </a>
                <h6 class="mt-2 mb-2"><a href="/category?id= >Category :Name">Category : name</a></h6>
                <h6 class=" mt-2 mb-2"><a href="/author-products?id=">Author : name </a></h6>

                <div class="price">$ <%= content.price %>
                </div>
              </div>

              <a href="/add-to-cart?id=<%= content._id %>"
                class="btn btn-block btn-secondary button-style mt-auto mb-2">
                Add to Cart
              </a>
              <a href="/add-to-wishlist?id=<%= content._id %>"
                class="btn btn-block btn-secondary button-style mt-auto mb-2">
                Add to Wishlist
              </a>

            </div>
          </div>

          <% } %>

      </div>


      <% var shop='' ; %>
        <% if (totalPages> 0) { %>
          <ul class="pagination text-center" style="display: flex; justify-content: center; padding-top: 10px;">
            <% if (currentPage==1) { %>
              <li class="page-item disabled">
                <a class="page-link">
                  First
                </a>
              </li>
              <% } else { %>
                <li class="page-item">
                   <a class="page-link" href="<%=shop%>?page=1">First</a>
                </li>
              <% } %>
              <% var i=(Number(currentPage)> 5 ? Number(currentPage) - 4 : 1) %>
                <% if (i!==1) { %>
                  <li class="page-item disabled"><a class="page-link">...</a></li>
                <% } %>
                <% for (; i <=(Number(currentPage) + 4) && i <=totalPages; i++) { %>
                <% if (i==currentPage) { %>
                  <li class="page-item active"><a class="page-link">
                    <%= i %>
                    </a>
                  </li>
                <% } else { %>
                  <li class="page-item">
                    <a class="page-link" href="<%=shop%>?page=<%= i %>">
                      <%= i %>
                    </a>
                    </li>
                <% } %>
                <% if (i==Number(currentPage) + 4 && i < totalPages) { %>
                  <li class="page-item disabled"><a class="page-link">...</a></li>
                <% } %>
              <% } %>
              <% if (currentPage==totalPages) { %>
                <li class="page-item disabled"><a class="page-link">Last</a></li>
              <% } else { %>
                <li class="page-item">
                  <a class="page-link" href="<%=shop%>?page=<%= totalPages %>">Last</a>
                </li>
            <% } %>

          </ul>
        <% } %>

    </div>


    <%- include('../partials/footer') %>