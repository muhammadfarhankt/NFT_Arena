<%- include('../partials/header') %>
<!-- navbar -->
<%- include('../partials/categories-navbar') %>

<div class="container">

  <!-- Product info -->
  <div class="row mt-4 mb-4">
    <div class="col-md-5 mt-2 mr-2 ml-auto">
      <div class="zoom">
        <img
          id="zoomed-image"
          src="/imagess/<%= productDetails.image %>"
          class="img-fluid product-img"
          alt="product image"
        />
        <div id="zoomed-area"></div>
      </div>
    </div>
    <div class="col-md-5 mt-2 mb-2 ml-2 mr-auto text-dark">
      <h2> <%= productDetails.name %> </h2>
      <hr />
      <p class="price">Price : $ <%= productDetails.price %></p>
      <p class="lead"> Description: 
        <p> <%= productDetails.description %> </p>
      </p>
      
      <p><strong>Category:</strong> <%= productDetails.category %></p>
      <p><strong>Author: </strong><%= productDetails.author %></p>
      <p><strong>Product code:</strong> <%= productDetails._id %></p>
      <p><strong>Date added to the store:</strong> <%= productDetails.createdAt %> </p>
      
      <% if (productDetails.stock>0) { %>
        <p class="is-available text-center">Stock : <%= productDetails.stock %></p>
        <% } else { %>
        <p class="text-center" style="background-color: red;">Out Of Stock</p>
      <% } %>
      <a href="/add-to-cart?id=<%= productDetails._id %>" class="btn btn-block btn-secondary mt-2 mb-2 button-style">
        Add to Shopping Cart
      </a>
      <a href="/add-to-wishlist?id=<%= productDetails._id %>" class="btn btn-block btn-secondary mt-3 mb-3 button-style">
        Add to Wishlist
      </a>
      
    </div>
  </div>
</div>

<script>
  const zoomedArea = document.getElementById("zoomed-area");
  const zoomedImage = document.getElementById("zoomed-image");

  zoomedImage.addEventListener("mousemove", function(e) {
    const zoom = 3; // Change this value to adjust zoom level
    const x = e.offsetX;
    const y = e.offsetY;
    const width = zoomedImage.offsetWidth;
    const height = zoomedImage.offsetHeight;

    zoomedArea.style.backgroundImage = `url('${zoomedImage.src}')`;
    zoomedArea.style.backgroundSize = `${width * zoom}px ${height * zoom}px`;
    zoomedArea.style.width = `${width / zoom}px`;
    zoomedArea.style.height = `${height / zoom}px`;
    zoomedArea.style.display = "block";
    zoomedArea.style.top = `${y - height / (zoom * 2)}px`;
    zoomedArea.style.left = `${x - width / (zoom * 2)}px`;
  });

  zoomedImage.addEventListener("mouseout", function() {
    zoomedArea.style.display = "none";
  });
</script>

<%- include('../partials/footer') %>
