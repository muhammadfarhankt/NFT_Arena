<%- include('../partials/header') %>
    <!-- navbar -->
    <%- include('../partials/categories-navbar') %>

        <div class="container cart">


            <% if ( userData.cart.item.length >0 ) { %>

            <h2 style="text-align: center; padding-top: 5px; padding-bottom: 5px;">Cart</h2>
            <div class="row">


                <div class="col-md-11 col-sm-12 m-auto table-responsive">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th style="text-align: left;">Details</th>
                                <th>&nbsp;</th>
                                <th>Quantity</th>
                                <th>&nbsp;</th>
                                <th>Total</th>
                                <th>Subtotal</th>
                                <th>&nbsp;</th>
                                <th style="text-align: left;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                              <% for(let i=0;i<userData.cart.item.length;i++){%>

                                <tr class="my-auto">
                                    <td>
                                        <a href="/product?id=<%=userData.cart.item[i].productId%>">
                                            <img src="/imagess/<%= userData.cart.item[i].image %>"
                                                class="img-small image-fluid" alt="image thumbnail" width="65px"
                                                height="65px" />
                                        </a>
                                    </td>
                                    <td>
                                        <div class="float-left mb-3">
                                            <a class="title-link"
                                                href="/product?id=<%=userData.cart.item[i].productId%>">
                                                <h6 class="text-left"><%= userData.cart.item[i].name %></h6>
                                                <p class="text-left">Product No: <%= userData.cart.item[i].productId %></p>
                                        </div>

                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a href="/reduce-from-cart?id=<%= userData.cart.item[i].productId %>"><i class="fa fa-minus-square"
                                                aria-hidden="true"></i></a>
                                    </td>
                                    <td class="text-center">
                                        <p class="qty-display pt-1">
                                          <%= userData.cart.item[i].quantity %>
                                        </p>
                                    </td>
                                    <td class="text-center">
                                        <a href="/add-to-cart?id=<%= userData.cart.item[i].productId %>"><i class="fa fa-plus-square"
                                                aria-hidden="true"></i> </a>
                                    </td>
                                    
                                    <td>$ <%= userData.cart.item[i].price %></td>
                                    <td>$ <%= userData.cart.item[i].price*userData.cart.item[i].quantity %> </td>
                                    <td>
                                        <a href="/remove-from-cart?id=<%= userData.cart.item[i].productId %>"
                                            class="btn btn-danger btn-sm button-style-sucess">Remove</a>
                                    </td>
                                    <td>
                                        <a href="/move-to-wishlist?id=<%= userData.cart.item[i].productId %>"
                                            class="btn btn-danger btn-sm button-style-danger">Move to Wishlist</a>
                                    </td>
                                </tr>

                              <%} %> 


                        </tbody>
                    </table>
                </div>
            </div>

            

            <hr>
            <div class="row mt-4 mr-auto">
                <div class="col-md-11 col-sm-12 m-auto">
                    <h3 style="text-align: right;">Total : $ <%= userData.cart.totalPrice %> </h3>
                </div>
            </div>
            <div class="row mt-2 mr-auto">
                <div class="col-md-11 col-sm-12 m-auto">
                    <a href="/checkout?id=<%= userData._id %>" class="btn btn-dark button-style" style="float: right;">Checkout</a>
                    <a href="/empty-cart" class="btn btn-dark button-style-danger" style="float: left;">Remove All</a>
                </div>
            </div>

            <% } else { %>

                <br><br>
                <h2 style="text-align: center; padding-top: 5px; padding-bottom: 5px;">Your Cart is empty</h2>
                <br><br><h3 style="text-align: center;">
                <a href="/shop">
                    Please click here Continue to shop
                </a>
                </h3>
                

            <% } %>

        </div>

        <%- include('../partials/footer') %>